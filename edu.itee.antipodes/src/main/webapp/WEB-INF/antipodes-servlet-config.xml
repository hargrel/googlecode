<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
              			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
              			http://www.springframework.org/schema/context
              			http://www.springframework.org/schema/context/spring-context-2.5.xsd">

<!-- Scans the edu.itee.antipodes.web package for @annotations and processes them -->
	
	<context:component-scan base-package="edu.itee.antipodes.web" />
<!-- Set up accounts -->
	<bean id="accDao" class="edu.itee.antipodes.web.AccountsStub"/>

    <bean id="seedData" class="edu.itee.antipodes.web.SeedData">
        <property name="accDao" ref="accDao"/>
    </bean>	

<!-- Wirings for the beans written in traditional spring XML (no annotations) -->
	
	<bean name="/inventoryexample.html" class="edu.itee.antipodes.web.InventoryExampleController">
  		<property name="tourManager" ref="tourManager" /> 
  	</bean>

<!--  Define how to reference the .jsp files we are going to use 
	
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
-->	

<!-- Pick up definitions in the messages.properties file -->

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="messages" />
    </bean>
    
<!--  Resolve different type of views using only one resolver --> 

	<bean id="viewResolver" class="org.springframework.web.servlet.view.ResourceBundleViewResolver">
		<property name="basename" value="views" />
	</bean>

<!-- Tiles configuration -->

	<bean id="tilesConfigurer" class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
	 	<property name="definitions" value="/WEB-INF/tiles-defs.xml" /> 
	 </bean>      



